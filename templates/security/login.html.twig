{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    .mb-3{text-align: center; background-color: #f4f4f4; padding: 10px 0px !important;}
    .container{margin-top: 150px!important; padding: 50px 50px !important; background-color: #17a2b8!important; border-radius: 15px!important;}
    .mb-2{color: white!important;}
    label{color: white!important;}
    #mr-r{float: right!important}
</style>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           <b> You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></b>
        </div>
    {% endif %}
    <div class="container">
    <h1 class="h3 mb-2 font-weight-normal">Log hier in: <br></h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <br>
        <button id="mr-r" class="btn btn-lg btn-light">
            Log in
        </button>
        <br>

    </div>


</form>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
